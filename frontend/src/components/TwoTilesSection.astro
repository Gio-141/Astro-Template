---
import ImageTile from "../assets/images/two-tiles-section-image.png";
import { Image } from "astro:assets";
interface Props{
    title: string;
}
const {title} = Astro.props
---

<section class="py-20 max-w-screen-xl mx-auto">
    <div class="container mx-auto px-4 flex gap-x-12 items-center flex-col lg:flex-row gap-y-10">
        <div class="flex-1 prose lg:prose-lg prose-p:font-semibold prose-p:text-gray-500">
            <h2>{title}</h2>
            <slot />
        </div>
        <div class="flex-1">
            <Image src={ImageTile} alt="Two tiles section image" />
        </div>
    </div>
</section>
