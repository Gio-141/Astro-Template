---
interface Props {
  title: string;
  subtitle: string;
  breadcrumbs: {
    label: string;
    href: string;
  }[];
}

const { title, subtitle, breadcrumbs } = Astro.props;
---

<div class="mb-12">
  <nav class="flex items-center text-sm text-neutral-medium mb-4">
    {breadcrumbs.map((item, index) => (
      <>
        {index > 0 && <span class="mx-2">â€º</span>}
        {item.href ? (
          <a href={item.href} class="hover:text-secondary transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-neutral">{item.label}</span>
        )}
      </>
    ))}
  </nav>
  <h1 class="text-4xl font-bold text-primary mb-4">{title}</h1>
  <p class="text-xl text-secondary">{subtitle}</p>
</div>