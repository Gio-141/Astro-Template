---
import { Image } from "astro:assets";
interface Props {
    image: Parameters<typeof Image>[0];
    title: string;
}
const { image, title } = Astro.props;
---

<section class="py-20">
    <div
        class="container mx-auto px-4 flex flex-col items-center gap-y-10 lg:max-w-screen-lg"
    >
        <h2 class="text-xl lg:text-2xl font-bold">{title}</h2>
        <div>
            <Image src={image.src!} alt={image.alt} />
        </div>
        <div
            class="prose max-w-none lg:prose-lg prose-p:font-semibold prose-p:text-gray-500"
        >
            <slot />
        </div>
    </div>
</section>
