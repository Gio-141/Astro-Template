---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  noindex?: boolean;
  type?: 'website' | 'article';
}

const { title, description, image, noindex, type } = Astro.props;

// Critical CSS paths
const criticalStyles = [
  '/styles/critical/base.css',
  '/styles/critical/header.css',
  '/styles/critical/hero.css'
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <SEO
      title={title}
      description={description}
      image={image}
      noindex={noindex}
      type={type}
    />
    
    <!-- Inline critical CSS -->
    {criticalStyles.map(style => 
      <link rel="stylesheet" href={style} media="print" onload="this.media='all'" />
    )}

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://images.unsplash.com" crossorigin />
    
    <!-- DNS prefetch -->
    <link rel="dns-prefetch" href="https://images.unsplash.com" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script>
      import { loadDeferredStyles, preloadCriticalImages } from '../utils/css-loader';
      document.addEventListener('DOMContentLoaded', () => {
        loadDeferredStyles();
        preloadCriticalImages();
      });
    </script>
  </head>
  <body class="bg-neutral-light">
    <Header />
    <main class="pt-32 lg:pt-20">
      <slot />
    </main>
    <Footer />
  </body>
</html>