---
import Layout from '../layouts/Layout.astro';
import ContactForm from './ContactForm.astro';

interface Props {
  title: string;
  subtitle: string;
  description: string;
  backgroundImage: string;
}

const { title, subtitle, description, backgroundImage } = Astro.props;
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center">
    <div class="absolute inset-0 z-0">
      <img 
        src={backgroundImage} 
        alt={title}
        class="w-full h-full object-cover brightness-50"
      />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="flex flex-col items-start">
        <div class="flex items-center text-white/80 mb-4">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span class="mx-2">›</span>
          <a href="/services" class="hover:text-white transition-colors">Services</a>
          <span class="mx-2">›</span>
          <span class="text-white">{title}</span>
        </div>
        <h1 class="text-5xl font-bold text-white mb-4">{title}</h1>
        <p class="text-xl text-white/90 max-w-2xl">{subtitle}</p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Left Column - Brief Intro -->
        <div>
          <p class="text-xl font-medium text-primary leading-relaxed">
            Foundation Repair Adelaide provides professional services to maintain structural stability and safety in homes and buildings across Adelaide.
          </p>
        </div>

        <!-- Right Column - Quote Form -->
        <div>
          <div class="bg-primary text-white p-10 rounded-lg shadow-2xl">
            <h3 class="text-3xl font-bold mb-6">FREE INSTANT QUOTE!</h3>
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Content -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none">
          <div class="mb-12">
            <img 
              src="https://images.unsplash.com/photo-1504615755583-2916b52192a3?auto=format&fit=crop&q=80&w=2070"
              alt="Foundation Repair Work"
              class="w-full h-[400px] object-cover rounded-lg shadow-lg mb-8"
            />
            <slot />
          </div>

          <div class="grid md:grid-cols-2 gap-12 mb-12">
            <div>
              <h3 class="text-2xl font-bold text-primary mb-4">Our Approach</h3>
              <p class="text-neutral-600">
                We utilize advanced techniques and state-of-the-art equipment to ensure your property's foundation remains stable and secure. Our comprehensive solutions address both immediate concerns and long-term stability.
              </p>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-primary mb-4">Quality Assurance</h3>
              <p class="text-neutral-600">
                Every project undergoes rigorous quality control measures. We maintain clear communication throughout the process and provide detailed documentation of all work performed.
              </p>
            </div>
          </div>

          <div class="text-center">
            <a 
              href="/contact"
              class="inline-block bg-secondary hover:bg-secondary-light text-white px-8 py-4 rounded-md font-bold transition-colors duration-300"
            >
              Schedule Your Service Today
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
.prose h2 {
  @apply text-3xl font-bold text-primary mb-6 pt-12 first:pt-0;
}

.prose h3 {
  @apply text-2xl font-bold text-primary mb-4 pt-8;
}

.prose p {
  @apply text-neutral-600 leading-relaxed mb-6;
}

.prose ul {
  @apply space-y-2 my-6;
}

.prose ul li {
  @apply flex items-center gap-2;
}

.prose ul li::before {
  content: "•";
  @apply text-primary font-bold;
}
</style>