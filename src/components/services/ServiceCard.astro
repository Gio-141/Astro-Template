---
interface Props {
  service: {
    title: string;
    description: string;
    image: string;
    icon: string;
    slug: string;
  };
}

const { service } = Astro.props;
---

<a href={service.slug} class="group">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-1 transition-all duration-300 border border-gray-100">
    <div class="relative h-48">
      <img 
        src={service.image} 
        alt={service.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      <div class="absolute top-4 right-4 bg-white p-2 rounded-full shadow-md">
        <span class="text-2xl">{service.icon}</span>
      </div>
    </div>
    <div class="p-6">
      <h3 class="text-xl font-bold text-primary mb-2 group-hover:text-secondary transition-colors duration-300">
        {service.title}
      </h3>
      <p class="text-neutral mb-4">{service.description}</p>
      <div class="flex items-center text-secondary font-semibold group-hover:text-primary-light transition-colors duration-300">
        Learn More
        <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </div>
  </div>
</a>