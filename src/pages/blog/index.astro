---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';

const posts = [
  {
    title: 'Managing Foundation Issues: Tips for a Stress-Free Repair',
    excerpt: 'Learn effective strategies to handle foundation repairs and ensure a smooth process.',
    category: 'Foundation Tips',
    date: '20/03/2024',
    image: 'https://images.unsplash.com/photo-1541123437800-1bb1317badc2',
    slug: '/blog/managing-foundation-issues'
  },
  {
    title: 'How to Identify Early Signs of Foundation Damage',
    excerpt: 'Discover the warning signs that indicate potential foundation problems.',
    category: 'Foundation Tips',
    date: '15/03/2024',
    image: 'https://images.unsplash.com/photo-1565538810643-b5bdb714032a',
    slug: '/blog/early-signs-foundation-damage'
  },
  {
    title: 'Understanding Foundation Waterproofing',
    excerpt: 'Learn about the importance of foundation waterproofing and prevention methods.',
    category: 'Maintenance',
    date: '10/03/2024',
    image: 'https://images.unsplash.com/photo-1504307651254-35680f356dfd',
    slug: '/blog/foundation-waterproofing'
  }
];
---

<Layout 
  title="Foundation Repair Blog"
  description="Expert advice and insights for your foundation health"
>
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-7xl mx-auto">
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-neutral mb-4">Foundation Care Blog</h1>
        <p class="text-xl text-neutral-medium">Expert advice and insights for your foundation health</p>
      </div>

      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          {posts.map(post => (
            <article class="mb-12 pb-12 border-b border-gray-200 last:border-0">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-[400px] object-cover rounded-lg mb-6"
              />
              <div class="flex items-center gap-4 mb-4">
                <span class="text-primary">{post.category}</span>
                <span class="text-neutral-medium">{post.date}</span>
              </div>
              <h2 class="text-2xl font-bold mb-4">
                <a href={post.slug} class="hover:text-secondary transition-colors">
                  {post.title}
                </a>
              </h2>
              <p class="text-neutral-medium mb-6">{post.excerpt}</p>
              <a 
                href={post.slug}
                class="text-secondary hover:text-primary font-semibold inline-flex items-center gap-2"
              >
                Read more
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </article>
          ))}
        </div>

        <!-- Quote Form -->
        <div class="lg:col-span-1">
          <div class="sticky top-24">
            <div class="bg-primary text-white p-8 rounded-lg shadow-lg">
              <h3 class="text-2xl font-bold mb-6">Get Your Free Quote</h3>
              <ContactForm />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>