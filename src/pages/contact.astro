---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const contactInfo = [
  {
    icon: 'location',
    title: 'Our Location',
    content: '123 Foundation St, Adelaide, SA 5000',
    link: 'https://maps.google.com'
  },
  {
    icon: 'phone',
    title: 'Phone Number',
    content: '(123) 456-7890',
    link: 'tel:(123)456-7890'
  },
  {
    icon: 'email',
    title: 'Email Address',
    content: 'info@foundationrepair.com',
    link: 'mailto:info@foundationrepair.com'
  }
];

const getIcon = (name: string) => {
  const icons = {
    location: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
    </svg>`,
    phone: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
    </svg>`,
    email: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
    </svg>`
  };
  return icons[name] || '';
};
---

<Layout 
  title="Contact Us - Foundation Repair Adelaide"
  description="Get in touch with Adelaide's leading foundation repair experts. Contact us for a free consultation and quote."
>
  <!-- Hero Section -->
  <section class="relative min-h-[40vh] flex items-center">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1581578731548-c64695cc6952?auto=format&fit=crop&q=80&w=2070"
        alt="Contact Us"
        class="w-full h-full object-cover brightness-50"
      />
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl">
        <h1 class="text-5xl font-bold text-white mb-6">Contact Us</h1>
        <p class="text-xl text-white/90">
          Get in touch with our team for expert foundation repair solutions. We're here to help with all your foundation needs.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        {contactInfo.map(item => (
          <a 
            href={item.link}
            class="bg-neutral-light p-8 rounded-lg text-center hover:bg-primary hover:text-white transition-all duration-300 group"
          >
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-6 text-primary group-hover:text-secondary">
              <Fragment set:html={getIcon(item.icon)} />
            </div>
            <h3 class="text-xl font-bold mb-2">{item.title}</h3>
            <p class="text-neutral group-hover:text-white/90">{item.content}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 bg-neutral-light">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-primary mb-4">Get Your Free Quote</h2>
          <p class="text-xl text-neutral-medium">
            Fill out the form below and our team will get back to you within 24 hours.
          </p>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-lg">
          <ContactForm />
        </div>

        <div class="mt-12 text-center">
          <p class="text-neutral-medium mb-4">
            Need immediate assistance? Call us at
            <a href="tel:(123)456-7890" class="text-secondary hover:text-primary font-bold">
              (123) 456-7890
            </a>
          </p>
          <p class="text-sm text-neutral-medium">
            Available 24/7 for emergency foundation repair services
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="h-[400px] relative">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3271.828645025787!2d138.59923531524136!3d-34.92577668037!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ab0ced1b3ad4f23%3A0x5033654628ec0f0!2sAdelaide%20SA%205000!5e0!3m2!1sen!2sau!4v1650000000000!5m2!1sen!2sau"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="absolute inset-0"
    ></iframe>
  </section>

  <!-- Business Hours -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-primary text-center mb-12">Business Hours</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-neutral-light p-8 rounded-lg">
            <h3 class="text-xl font-bold text-primary mb-6">Regular Hours</h3>
            <ul class="space-y-4">
              <li class="flex justify-between">
                <span>Monday - Friday</span>
                <span class="font-bold">8:00 AM - 6:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Saturday</span>
                <span class="font-bold">9:00 AM - 4:00 PM</span>
              </li>
              <li class="flex justify-between">
                <span>Sunday</span>
                <span class="font-bold">Closed</span>
              </li>
            </ul>
          </div>
          <div class="bg-primary text-white p-8 rounded-lg">
            <h3 class="text-xl font-bold mb-6">Emergency Service</h3>
            <p class="mb-4">
              Available 24/7 for emergency foundation repair services. Call our emergency hotline:
            </p>
            <a 
              href="tel:(123)456-7890"
              class="text-2xl font-bold hover:text-secondary transition-colors"
            >
              (123) 456-7890
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>