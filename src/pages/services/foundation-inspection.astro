---
import Layout from '../../layouts/Layout.astro';
import ServiceLayout from '../../components/ServiceLayout.astro';

const content = `Our foundation inspection service provides a thorough assessment of your property's structural integrity. Using advanced diagnostic tools and techniques, our experienced team identifies potential issues before they become major problems.

We understand that foundation problems can be stressful and potentially costly. That's why we focus on early detection and preventive measures, offering comprehensive inspections that give you peace of mind and clear understanding of your foundation's condition.

Our certified inspectors use state-of-the-art equipment to assess every aspect of your foundation, from structural integrity to moisture levels. This thorough approach ensures we don't miss any potential issues that could affect your property's stability.`;

const features = [
  "Comprehensive foundation assessment",
  "Advanced diagnostic equipment",
  "Detailed inspection reports",
  "Expert recommendations",
  "Same-day inspection available",
  "Free initial consultation"
];
---

<ServiceLayout
  title="Foundation Inspection"
  subtitle="Professional foundation assessment and diagnosis"
  description="Expert foundation inspection services in Adelaide. Comprehensive assessment and early problem detection."
  backgroundImage="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?q=80&w=2070"
>
  <div class="prose prose-lg max-w-none">
    <p class="lead text-xl mb-8">
      Trust Adelaide's leading foundation inspection experts to thoroughly assess your property's foundation condition.
    </p>

    {content.split('\n\n').map(paragraph => (
      <p>{paragraph}</p>
    ))}

    <h3 class="text-2xl font-bold mt-8 mb-4">Our Inspection Process</h3>
    <ol class="list-decimal pl-6 space-y-4">
      <li>Initial consultation and site visit</li>
      <li>Visual inspection of the entire foundation</li>
      <li>Advanced diagnostic testing</li>
      <li>Moisture level assessment</li>
      <li>Structural integrity evaluation</li>
      <li>Detailed report preparation</li>
    </ol>

    <h3 class="text-2xl font-bold mt-8 mb-4">Key Features</h3>
    <ul class="space-y-2">
      {features.map(feature => (
        <li class="flex items-center gap-2">
          <span class="text-secondary">âœ“</span>
          <span>{feature}</span>
        </li>
      ))}
    </ul>
  </div>
</ServiceLayout>