---
import Layout from '../../layouts/Layout.astro';
import ServiceLayout from '../../components/ServiceLayout.astro';

const content = `Our professional underpinning service strengthens and stabilizes foundations that have been compromised due to soil issues, structural problems, or age-related deterioration. We use modern underpinning techniques to ensure your foundation's long-term stability.

Underpinning is a specialized process that requires extensive experience and expertise. Our team has successfully completed numerous underpinning projects across Adelaide, providing property owners with peace of mind and lasting solutions.

We employ various underpinning methods, including mass concrete underpinning, beam and base underpinning, and mini-piled underpinning, selecting the most appropriate technique for your specific situation.`;

const features = [
  "Professional foundation strengthening",
  "Multiple underpinning methods",
  "Experienced specialists",
  "Comprehensive assessment",
  "Long-term solutions",
  "Quality materials"
];
---

<ServiceLayout
  title="Foundation Underpinning"
  subtitle="Professional foundation strengthening and stabilization"
  description="Expert foundation underpinning services in Adelaide. Professional solutions for foundation stabilization and strengthening."
  backgroundImage="https://images.unsplash.com/photo-1590579491624-f98f36d4c763?q=80&w=2070"
>
  <div class="prose prose-lg max-w-none">
    <p class="lead text-xl mb-8">
      Professional underpinning solutions to strengthen and stabilize your foundation.
    </p>

    {content.split('\n\n').map(paragraph => (
      <p>{paragraph}</p>
    ))}

    <h3 class="text-2xl font-bold mt-8 mb-4">Our Underpinning Process</h3>
    <ol class="list-decimal pl-6 space-y-4">
      <li>Site investigation and assessment</li>
      <li>Method selection</li>
      <li>Detailed planning</li>
      <li>Professional execution</li>
      <li>Quality control</li>
      <li>Final inspection</li>
    </ol>

    <h3 class="text-2xl font-bold mt-8 mb-4">Key Features</h3>
    <ul class="space-y-2">
      {features.map(feature => (
        <li class="flex items-center gap-2">
          <span class="text-secondary">âœ“</span>
          <span>{feature}</span>
        </li>
      ))}
    </ul>
  </div>
</ServiceLayout>