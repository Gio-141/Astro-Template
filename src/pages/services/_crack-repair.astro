---
import Layout from '../../layouts/Layout.astro';
import ServiceLayout from '../../components/ServiceLayout.astro';

const content = `Our professional crack repair service addresses all types of foundation cracks, from minor hairline fractures to major structural issues. We use industry-leading techniques and materials to ensure lasting repairs that protect your property's integrity.

Foundation cracks can lead to serious structural problems if left untreated. Our expert team provides thorough assessments and implements effective repair solutions that prevent further damage and strengthen your foundation.

We utilize advanced epoxy injection systems and other specialized repair methods to ensure that cracks are properly sealed and reinforced. Our repairs not only fix the visible damage but also address the underlying causes to prevent future issues.`;

const features = [
  "Expert crack assessment",
  "Advanced repair techniques",
  "High-quality materials",
  "Waterproofing solutions",
  "Structural reinforcement",
  "Preventive measures"
];
---

<ServiceLayout
  title="Foundation Crack Repair"
  subtitle="Professional repair solutions for all types of foundation cracks"
  description="Expert foundation crack repair services in Adelaide. Professional soluutions for all tyutions for all tytions for all types of foundation cracks."
  backgroundImage="https://images.unsplash.com/photo-1504615755583-2916b52192a3?q=80&w=2070"
>
  <div class="prose prose-lg max-w-none">
    <p class="lead text-xl mb-8">
      Expert crack repair solutions to protect and strengthen your foundation.
    </p>

    {content.split('\n\n').map(paragraph => (
      <p>{paragraph}</p>
    ))}

    <h3 class="text-2xl font-bold mt-8 mb-4">Our Repair Process</h3>
    <ol class="list-decimal pl-6 space-y-4">
      <li>Thorough crack assessment</li>
      <li>Cause identification</li>
      <li>Repair method selection</li>
      <li>Professional repair execution</li>
      <li>Waterproofing application</li>
      <li>Final inspection</li>
    </ol>

    <h3 class="text-2xl font-bold mt-8 mb-4">Key Features</h3>
    <ul class="space-y-2">
      {features.map(feature => (
        <li class="flex items-center gap-2">
          <span class="text-secondary">âœ“</span>
          <span>{feature}</span>
        </li>
      ))}
    </ul>
  </div>
</ServiceLayout>